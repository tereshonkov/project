generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  email     String     @unique
  password  String
  name      String?
  pressures Pressure[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pressure {
  id        String @id @default(uuid())
  systolic  Int
  diastolic Int
  pulse     Int

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
